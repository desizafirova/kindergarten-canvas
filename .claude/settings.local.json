{
  "permissions": {
    "allow": [
      "Bash(if not exist \".claude\" mkdir .claude)",
      "Bash(npm install)",
      "Bash(psql:*)",
      "Bash(taskkill:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)"
    ]
  },
  "mcpServers": {
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "claude-code",
        "--project",
        "."
      ]
    }
  }
}
