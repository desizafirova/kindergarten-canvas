{
  "permissions": {
    "allow": [
      "Bash(if not exist \".claude\" mkdir .claude)",
      "Bash(npm install)"
    ]
  },
  "mcpServers": {
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "claude-code",
        "--project",
        "."
      ]
    }
  }
}
